#!/usr/bin/env python3
from distutils.core import setup, Extension
from Cython.Build import cythonize

native_sources = "@MOD_SOURCES@".split(';')


exts = [
        Extension(
            name = "".join(source.split('.')[0:-1]),
            sources = [source],
            language='c++',
            library_dirs=['./'],
            libraries=['native'])
        for source in native_sources]
setup(
        name = 'psesca',
        ext_modules = cythonize(exts)
)
